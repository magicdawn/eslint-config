{
  "name": "@magicdawn/eslint-config",
  "type": "module",
  "version": "1.5.13",
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "description": "magicdawn's eslint-config",
  "author": "magicdawn",
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --no-fixed-extension --watch",
    "build": "tsdown src/index.ts --dts --no-fixed-extension",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": "^66.4.1",
    "eslint": "^9.32.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@sxzz/eslint-config": "^7.4.1",
    "es-toolkit": "^1.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^2.1.4"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.0"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts,jsx,tsx,json,md,yaml,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
