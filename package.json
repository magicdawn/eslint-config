{
  "name": "@magicdawn/eslint-config",
  "version": "1.5.2",
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "description": "magicdawn's eslint-config",
  "type": "module",
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "author": "magicdawn",
  "files": [
    "dist/"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --watch",
    "build": "tsdown src/index.ts --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": ">=65.0.0",
    "eslint": "^9.27.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.27.0",
    "@sxzz/eslint-config": "^7.0.1",
    "es-toolkit": "^1.38.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-flat-config-utils": "^2.0.1",
    "globals": "^16.1.0",
    "typescript-eslint": "^8.32.1"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.11.11"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts,jsx,tsx,json,md,yaml,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
