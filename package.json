{
  "name": "@magicdawn/eslint-config",
  "version": "1.5.3",
  "packageManager": "pnpm@10.12.1+sha512.f0dda8580f0ee9481c5c79a1d927b9164f2c478e90992ad268bbb2465a736984391d6333d2c327913578b2804af33474ca554ba29c04a8b13060a717675ae3ac",
  "description": "magicdawn's eslint-config",
  "type": "module",
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "author": "magicdawn",
  "files": [
    "dist/"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --watch",
    "build": "tsdown src/index.ts --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": ">=65.0.0",
    "eslint": "^9.27.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "^9.28.0",
    "@sxzz/eslint-config": "^7.0.2",
    "es-toolkit": "^1.39.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-flat-config-utils": "^2.1.0",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.34.0"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/node": "^24.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.12.7"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts,jsx,tsx,json,md,yaml,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
