{
  "name": "@magicdawn/eslint-config",
  "type": "module",
  "version": "1.5.13",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "description": "magicdawn's eslint-config",
  "author": "magicdawn",
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --no-fixed-extension --watch",
    "build": "tsdown src/index.ts --dts --no-fixed-extension",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": "^66.4.1",
    "eslint": "^9.32.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@sxzz/eslint-config": "^7.4.1",
    "es-toolkit": "^1.42.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^2.1.4"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/node": "^24.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsdown": "^0.17.2"
  },
  "lint-staged": {
    "*.{?(c|m)(j|t)s?(x),json,y?(a)ml}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!*.{?(c|m)(j|t)s?(x),json,y?(a)ml}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
