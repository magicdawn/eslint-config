{
  "name": "@magicdawn/eslint-config",
  "version": "1.5.8",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "magicdawn's eslint-config",
  "type": "module",
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "author": "magicdawn",
  "files": [
    "dist/"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --watch",
    "build": "tsdown src/index.ts --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": "^66.4.1",
    "eslint": "^9.32.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@sxzz/eslint-config": "^7.1.2",
    "es-toolkit": "^1.39.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^2.1.1"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/node": "^24.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,ts,cts,mts,jsx,tsx,json,md,yaml,yml}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
