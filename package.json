{
  "name": "@magicdawn/eslint-config",
  "type": "module",
  "version": "1.6.1",
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
  "description": "magicdawn's eslint-config",
  "author": "magicdawn",
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/magicdawn/eslint-config/issues"
  },
  "keywords": [
    "eslint-config",
    "eslint",
    "magicdawn"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "tsdown src/index.ts --dts --no-fixed-extension --watch",
    "build": "tsdown src/index.ts --dts --no-fixed-extension",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm typecheck && pnpm build",
    "inspect": "pnpx @eslint/config-inspector@latest"
  },
  "peerDependencies": {
    "@unocss/eslint-plugin": "^66.4.1",
    "eslint": "^9.32.0"
  },
  "peerDependenciesMeta": {
    "@unocss/eslint-plugin": {
      "optional": true
    }
  },
  "dependencies": {
    "@sxzz/eslint-config": "^7.4.4",
    "es-toolkit": "^1.43.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-flat-config-utils": "^2.1.4"
  },
  "devDependencies": {
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/node": "^24.10.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.3"
  },
  "lint-staged": {
    "*.{?(c|m)(j|t)s?(x),json,y?(a)ml}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!*.{?(c|m)(j|t)s?(x),json,y?(a)ml}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
